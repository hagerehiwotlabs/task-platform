{
  "name": "hagerehiwotlabs-task-platform",
  "private": true,
  "description": "Professional task management platform for HagereHiwotLabs - Production Ready",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run start:dev --workspace=apps/backend",
    "build": "turbo run build",
    "build:ci": "turbo run build",
    "test": "turbo run test",
    "test:ci": "turbo run test -- --coverage",
    "test:coverage": "turbo run test -- --coverage",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "setup": "npm install && npm run docker:up && npm run db:setup",
    "db:setup": "npm run prisma:generate --workspace=apps/backend && npm run prisma:migrate --workspace=apps/backend && npm run prisma:seed --workspace=apps/backend",
    "db:migrate": "npm run prisma:migrate --workspace=apps/backend",
    "db:reset": "npm run prisma:reset --workspace=apps/backend",
    "db:seed": "npm run prisma:seed --workspace=apps/backend",
    "generate:types": "npm run generate --workspace=packages/contracts",
    "validate:contracts": "npm run validate --workspace=packages/contracts",
    "preview": "npm run preview --workspace=apps/frontend",
    "prepare": "husky install",
    "ci:validate": "turbo run lint type-check format:check",
    "ci:test": "turbo run test -- --coverage",
    "ci:build": "turbo run build",
    "ci:coverage-check": "node scripts/check-coverage.js",
    "health:check": "curl -f http://localhost:3000/api/v1/health || exit 1",
    "release:contracts": "npm run release --workspace=packages/contracts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "npm@11.9.0",
  "engines": {
    "node": ">=20.18.2",
    "npm": ">=10.8.2"
  },
  "volta": {
    "node": "20.18.2",
    "npm": "10.8.2"
  },
  "overrides": {
    "glob": "^13.0.0"
  }
}
